<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

	<!-- CONVERTERS -->
	<converter>
	 	<converter-id>entityConverter</converter-id>
	 	<converter-class>br.com.bolaoCopaDoMundo.converter.EntityConverter</converter-class>
	</converter>
	 <converter>
		 <converter-id>dateConverter</converter-id>
		 <converter-class>br.com.bolaoCopaDoMundo.converter.DateConverter</converter-class>
	 </converter>
	
	<!-- SpEL -->
	<application>
	  	<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	 
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

</faces-config>
